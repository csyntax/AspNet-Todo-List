@model IEnumerable<TodoList.Web.ViewModels.Todo.ToDoItemViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@Html.ActionLink("Create", "Create", "TodoItems", new { @class = "btn btn-default" })

<ol>
    @foreach (var todoItem in Model)
    {
        <li>
            <h3>@todoItem.Title</h3>
            @using(Html.BeginForm("Delete", "TodoItems", new { Id = todoItem.Id }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                
                <button type="submit">Delete</button>
            }
        </li>
    }
</ol>
